<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guest List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/uploads/css/styles.css"> <!-- Custom CSS -->
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Guest List</h1>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Mobile Number</th>
                    <th>Address</th>
                    <th>Purpose of Visit</th>
                    <th>Stay Dates</th>
                    <th>Email ID</th>
                    <th>ID Proof Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% guests.forEach(guest => { %>
                <tr>
                    <td><%= guest.fullName %></td>
                    <td><%= guest.mobileNumber %></td>
                    <td><%= guest.address %></td>
                    <td><%= guest.purposeOfVisit %></td>
                    <td><%= guest.stayDates.from.toDateString() %> to <%= guest.stayDates.to.toDateString() %></td>
                    <td><%= guest.emailId %></td>
                    <td><%= guest.idProofNumber %></td>
                    <td>
                        <a href="/admin/guests/<%= guest.hotelId %>/edit/<%= guest._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/admin/guests/<%= guest.hotelId %>/view/<%= guest._id %>" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
