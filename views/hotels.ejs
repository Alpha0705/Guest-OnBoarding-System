<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registered Hotels</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/uploads/css/styles.css"> <!-- Custom CSS -->
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Manage Hotels</h1>
        
        <div class="mb-4">
            <form action="/add-hotel" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Hotel Name" required>
                </div>
                <div class="form-group">
                    <input type="file" name="logo" class="form-control-file" required>
                </div>
                <div class="form-group">
                    <input type="text" name="address" class="form-control" placeholder="Hotel Address" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Hotel</button>
            </form>
        </div>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Hotel Name</th>
                    <th>Address</th>
                    <th>Logo</th>
                    <th>QR Code</th>
                </tr>
            </thead>
            <tbody>
                <% hotels.forEach(hotel => { %>
                <tr>
                    <td><%= hotel.name %></td>
                    <td><%= hotel.address %></td>
                    <td><img src="/uploads/<%= hotel.logo %>" alt="Logo" width="100"></td>
                    <td><img src="<%= hotel.qrCode %>" alt="QR Code" width="100"></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
